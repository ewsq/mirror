<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.miyatu.mirror.ui.PayModeActivity">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/icon_back_black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        </ImageView>
        </RelativeLayout>
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#181818"
            android:text="支付方式"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_edit"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="编辑"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
<View
    android:background="#ededed"
    android:layout_width="match_parent"
    android:layout_height="1dp">

</View>
    <LinearLayout
        android:id="@+id/iv_payfor_zhi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_dialog_rect"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/pay"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="26dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
            android:text="支付宝支付"
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:drawablePadding="2dp"
                android:drawableLeft="@mipmap/icon_security"
                android:text="支付宝安全支付"
                android:textSize="11dp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView

            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_more"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/iv_payfor_wechat"
        android:layout_margin="20dp"
        android:background="@drawable/bg_dialog_rect"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/weichat"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="26dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="微信支付"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:drawablePadding="2dp"
                android:drawableLeft="@mipmap/icon_security"
                android:text="微信安全支付"
                android:textSize="11dp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView

            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_more"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>