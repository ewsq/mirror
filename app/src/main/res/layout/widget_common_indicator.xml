<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:background="#00000000"
        android:layout_weight="1"
        android:layout_height="1dp"
        android:layout_width="0dp">
    </View>

    <LinearLayout
        android:id="@+id/ll_indicator_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的量体记录"
            android:textColor="#7F9EA9"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:background="@mipmap/icon_indictor"
            android:id="@+id/iv_index01"
            android:layout_width="31dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <View
        android:background="#00000000"
        android:layout_weight="1"
        android:layout_height="1dp"
        android:layout_width="0dp">

    </View>

    <LinearLayout
        android:id="@+id/ll_indicator_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲友量体记录"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <ImageView
            android:background="@mipmap/icon_indictor"
            android:id="@+id/iv_index02"
            android:layout_width="31dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:background="#00000000"
        android:layout_weight="1"
        android:layout_height="1dp"
        android:layout_width="0dp">

    </View>

</LinearLayout>